programa
{
	funcao inicio()
	{
	     caracter continua = 's'
	    

	    faca 
	      {
	          	 inteiro mes
	          	 
	          escreva ("\nDigite o numero do mes do ano ou 15 para finalizar\n: ")
		     leia (mes)
		     
		     escolha(mes)
		     
		     {
		     caso 1:
		            escreva("\nJaneiro")
		            pare
		     caso 2:
		            escreva("\nFevereiro")
		            pare
		     caso 3:
		            escreva("\nMarço")
		            pare 
		     caso 4:
		            escreva("\nAbril")
		            pare
		     caso 5:
		            escreva("\nMaio")
		            pare
		     caso 6:
		            escreva("\nJunho")
		            pare 
		     caso 7:
		            escreva("\nJulho")
		            pare 
		     caso 8:
		            escreva("\nAgosto")
		            pare
		     caso 9:
		            escreva("\nSetembro")
		            pare 
	          caso 10:
		            escreva("\nOutubro")
		            pare        	
		     caso 11:
		            escreva("\nNovembro")
		            pare
		     caso 12:
		            escreva("\nDezembro")
		            pare  			
		     caso 15:
		            escreva("\nO programa sera finalizado!")
		            pare	
		     caso contrario:
		            escreva("\nOpção invalida")
		            pare
		   
		     }
		    
		  escreva("\nContinua a execução?\n")
		  leia(continua)
	      }
	    enquanto (continua == 's')
	    escreva("\nDigite N para confirmar\n!")
			leia(continua)
			

	}
}