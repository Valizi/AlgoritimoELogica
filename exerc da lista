programa
{
	
	funcao inicio()
	{

	caracter continua
	inteiro num1 = 0, num2 = 0, num3 = 0
	inteiro menor= 0, meio = 0, maior = 0
	
		escreva("Contador descresente")

		faca
		{
			escreva("\ndigite o numero 1:")
			leia(num1)
			escreva("\ndigite o numero 2:")
			leia(num2)
			escreva("\ndigite o numero 3:")
			leia(num3)

			menor = num1
			meio =  num1
			maior = num1

			se (menor > num2)
				menor = num2
			se (menor > num3)
				menor = num3
				
			se (maior < num2)
				maior = num2
			se (maior < num3)
				maior = num3	

			se (menor > meio)	
				meio = num2

				senao
				meio = num3

				escreva ("\n A ordem dos numeros descrente é:", maior, meio, menor)

				escreva ("\ncontinua execução do programa?")
				leia (continua)
				
			}
			enquanto (continua == 'S' ou continua == 's')
			escreva("\nPrograma finalizado!")
			
	}
}